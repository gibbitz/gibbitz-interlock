{{systemLog ' ACTOR SHEET | ' this}}

<form class="edgerunner-sheet crt">
  <main class="edgerunner-sheet__layout">
    {{identity this}}
    {{portrait actor}}
    {{stat actor.system.stats}}
    <section class="edgerunner-sheet__flexible-row fieldset">
      <nav class="sheet-tabs tabs legend" data-selector="background-tabs" data-group="background">
        {{!-- Default tab is specified in actor-sheet.js --}}
        <a class="item" data-tab="background">Background</a>
        <a class="item" data-tab="combat">Combat</a>
        <a class="item" data-tab="tasks">Tasks</a>
        <a class="item" data-tab="inventory">Inventory</a>
        <a class="item" data-tab="cyberware">Cyberware</a>
        <a class="item" data-tab="netrunning">Netrunning</a>
      </nav>
      <section data-selector="background-tab-body">
        <article class="tab" data-tab="background">
            {{family actor.system.bio.family}}
            {{siblings actor.system.bio.siblings}}
            {{lifepath actor.system.bio.lifepath}}
        </article>
        <article class="tab" data-tab="combat">
          {{health actor.system.health}}
          {{armor actor.itemTypes.Armor}}
          {{weapon actor.itemTypes.Weapon}}
        </article>
        <article class="tab" data-tab="tasks">
          {{skill actor.itemTypes.Skill}}
        </article>
        <article class="tab" data-tab="inventory">
          {{outfit actor.itemTypes.Outfit}}
          {{weapon actor.itemTypes.Weapon}}
        </article>
        <article class="tab" data-tab="cyberware">
          {{cyberware actor.itemTypes.Cyberware}}
        </article>
        <article class="tab" data-tab="netrunning">
          {{cyberdeck actor.itemTypes.Cyberdeck}}
          {{program actor.itemTypes.Program}}
        </article>
      </section>
    </section>
  </main>
</form>