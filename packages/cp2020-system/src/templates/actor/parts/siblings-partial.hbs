{{systemLog ' BIO | SIBLINGS | ' this}}
{{#cp2020-sectionBox title='Siblings' class='sibling-list__wrapper'}}
  {{#if this.length}}
    <ul>
      {{#each this}}
        <li class="sibling">
          {{cp2020-input
            name=(concat 'system.bio.siblings.' @index '.name')
            value=name
            type='text'
            label=(concat ../constants.SYSTEM_NAME '.siblings.name')
          }}
          {{cp2020-input
            name=(concat 'system.bio.siblings.' @index '.handle')
            value=handle
            type='text'
            label=(concat ../constants.SYSTEM_NAME '.siblings.handle')
          }}
          {{cp2020-input
            name=(concat 'system.bio.siblings.' @index '.gender')
            value=gender
            type='text'
            label=(concat ../constants.SYSTEM_NAME '.siblings.gender')
          }}
          {{cp2020-select
            label=(concat ../constants.SYSTEM_NAME '.siblings.age')
            name=(concat 'system.bio.siblings.' @index '.relativeAge')
            value=relativeAge
            inverted=true
            options=@root.constants.RELATIVE_AGE_SELECT_OPTIONS
          }}
          {{cp2020-editor
            content=relationshipNotes
            target=(concat 'system.bio.siblings.' @index '.relationshipNotes')
            editable='true'
            label=(concat ../constants.SYSTEM_NAME '.family.relationshipNotes')
          }}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <div class="siblings--none">{{localize (concat ../constants.SYSTEM_NAME '.siblings.none')}}</div>
  {{/if}}
  {{cp2020-button
    label='add'
    action='add-sibling'
  }}
{{/cp2020-sectionBox}}