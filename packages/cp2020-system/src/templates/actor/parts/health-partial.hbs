{{systemLog 'HEALTH | ' this}}
{{#* inline "statusSlot"}}
  {{systemLog 'status | ' damage}}
  <li
    class="damage-interface__status-slot"
    data-damage-index="{{number}}"
    data-damage-type="{{damage.[number].type}}"
    data-damage-location="{{damage.[number].location}}"
  ></li>
{{/inline}}

<section class="edgerunner-sheet__health">
  <article class="health__damage-interface" data-health>
    {{#cp2020-sectionBox
      title=(localize (concat @root.constants.SYSTEM_NAME '.health.woundStatuses.light'))
      class='damage-interface__status-block'
    }}
      <ul class="damage-interface__status-slots">
        {{> statusSlot number=0 damage=this.damage}}
        {{> statusSlot number=1 damage=this.damage}}
        {{> statusSlot number=2 damage=this.damage}}
        {{> statusSlot number=3 damage=this.damage}}
