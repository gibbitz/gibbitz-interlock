      <header class="damage-interface__status-header">
        {{localize (concat @root.constants.SYSTEM_NAME '.health.woundStatuses.light')}}
      </header>
      <ul class="damage-interface__status-slots">
        {{> statusSlot number=0 damage=this.damage}}
