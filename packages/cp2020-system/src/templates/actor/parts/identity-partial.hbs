{{systemLog ' IDENTITY | ACTOR | ' this}}
<article class="fieldset edgerunner-sheet__identity">
  <div class="legend">Identity</div>
  {{cp2020-input
    name='name'
    value=actor.name
    type='text'
    label=(concat constants.SYSTEM_NAME '.identity.handle')
  }}
  {{#with actor.system.identity}}
    {{cp2020-input
      name='system.identity.givenName'
      value=givenName
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.identity.givenName')
    }}
    {{cp2020-input
      name='system.identity.age'
      value=age
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.identity.age')
    }}
    {{cp2020-input
      name='system.identity.gender'
      value=gender
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.identity.gender')
    }}
    {{cp2020-input
      name='system.identity.sexualPreference'
      value=sexualPreference
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.identity.sexualPreference')
    }}
    {{cp2020-input
      name='system.bio.family.ethnicity'
      value=@root.system.bio.family.ethnicity
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.family.ethnicity')
    }}
    {{cp2020-input
      name='system.bio.family.language'
      value=@root.system.bio.family.language
      type='text'
      label=(concat ../constants.SYSTEM_NAME '.family.language')
    }}
  {{/with}}
</article>
