{{systemLog ' SELECT | ' this}}
<span class="field-box {{#if class}}{{class}}{{/if}}">
  <span class="field-box--inner">
    <label>
      <select
        name="{{name}}"
        {{#if action}}data-action={{action}}{{/if}}
        {{#if selector}}data-selector="{{selector}}"{{/if}}
        {{#if uuid}}data-uuid="{{uuid}}"{{/if}}
        {{#if key}}data-key="{{key}}"{{/if}}
        {{#if render}}data-render="{{render}}"{{/if}}
        {{#if multiple}}multiple{{/if}}
      >
        {{!-- catch undefined options errors from selectOptions helper --}}
        {{#if options}}
          {{selectOptions options inverted=inverted selected=value}}
        {{else}}
          <option>NO OPTIONS PROVIDED</option>
        {{/if}}
      </select>
      <small>{{localize label}}</small>
    </label>
  </span>
</span>