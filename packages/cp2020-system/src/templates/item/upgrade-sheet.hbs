{{systemLog ' UPGRADE SHEET | ' this}}
<form class="{{cssClass}}" autocomplete="off">
  {{cp2020-outfitHeader
  name=item.name
  label=(concat @root.constants.SYSTEM_NAME '.items.upgrade.label')
  }}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-selector="primary-tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="specs">Specs</a>
  </nav>

  {{!-- Sheet Body --}}
  <section data-selector="primary-tab-body">

    {{!-- Description Tab --}}
    <article class="tab" data-group="primary" data-tab="description">
      {{itemDetails this}}
    </article>

    {{!-- Specs Tab --}}
    <article class="tab specs" data-group="primary" data-tab="specs">
      {{!-- Common Modifier Info --}}
      <aside>
        <div>
          {{cp2020-select
            label=(concat @root.constants.SYSTEM_NAME '.items.upgrade.recipient.long')
            name="system.recipient"
            value=item.system.recipient
            options=ITEM_TYPES_SELECT_OPTIONS
          }}
          {{!-- cp2020-input
            label=(concat @root.constants.SYSTEM_NAME '.items.upgrade.recipient.long')
            name="system.recipient"
            type="text"
            value=item.system.recipient
          --}}
          {{cp2020-input
            label=(concat @root.constants.SYSTEM_NAME '.items.upgrade.value.long')
            name="system.value"
            type="number"
            value=item.system.value
          }}
          {{cp2020-input
            label=(concat @root.constants.SYSTEM_NAME '.items.upgrade.property.long')
            name="system.property"
            type="text"
            value=item.system.property
          }}
        </div>
      </aside>
      {{outfitSpecs this}}
    </article>


  </section>
</form>