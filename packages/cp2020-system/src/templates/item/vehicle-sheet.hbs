{{systemLog ' Vehicle | ' this}}
<form class="{{cssClass}}" autocomplete="off">
  {{cp2020-outfitHeader
    name=item.name
    label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.label')
  }}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-selector="primary-tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="specs">Specs</a>
  </nav>

  {{!-- Sheet Body --}}
  <section data-selector="primary-tab-body">

    {{!-- Description Tab --}}
    <article class="tab" data-group="primary" data-tab="description">
      {{itemDetails this}}
    </article>

    {{!-- Specs Tab --}}
    <article class="tab specs" data-group="primary" data-tab="specs">
      <aside>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.acc.long')
          name="system.acceleration"
          type='number'
          value=item.system.acceleration
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.dec.long')
          name="system.deceleration"
          type='number'
          value=item.system.deceleration
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.crew')
          name="system.crew"
          type='number'
          value=item.system.crew
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.passengers.long')
          name="system.passengers"
          type='number'
          value=item.system.passengers
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.range')
          name="system.range"
          type='number'
          value=item.system.range
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.cargo')
          name="system.cargo"
          type='number'
          value=item.system.cargo
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.maneuver.long')
          name="system.maneuver"
          type='number'
          value=item.system.maneuver
          }}
        </div>
        <div>
          {{cp2020-input
          label=(concat @root.constants.SYSTEM_NAME '.items.vehicle.topSpeed.long')
          name="system.topSpeed"
          type='number'
          value=item.system.topSpeed
          }}
        </div>
      </aside>
      {{outfitSpecs this}}
    </article>

  </section>
</form>