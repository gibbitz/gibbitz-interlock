{{systemLog ' SKILL PARTIAL: | ' this}}
{{#if this.length}}
  {{#cp2020-sectionBox title='Skills' class='item-list__wrapper'}}
    <ul class="item-list item-list--skills">
      {{#each this}}
        <li
          class="item item--skills"
          data-item-id="{{_id}}"
          data-item-name="{{name}}"
        >
          <details>
            <summary>
              <a class="item-roll item-name">
                {{name}}
              </a>
              <div>
                {{cp2020-input
                  label=(concat @root.constants.SYSTEM_NAME '.items.skill.level')
                  selector='actor.item'
                  uuid=_id
                  key='system.level'
                  type='number'
                  value=this.system.level
                }}
              </div>
              {{#if system.chipLevel}}
              {{else}}
                <div>
                  {{cp2020-input
                    label=(concat @root.constants.SYSTEM_NAME '.items.skill.ip')
                    selector='actor.item'
                    uuid=_id
                    key='system.ip'
                    render='true'
                    type='number'
                    value=this.system.ip
                  }}
                </div>
                <div>
                  <label>{{localize (concat @root.constants.SYSTEM_NAME '.items.skill.levelUp')}}</label>
                  {{system.levelUp}}
                </div>
              {{/if}}
              <div>
                {{cp2020-checkbox
                  label=(concat @root.constants.SYSTEM_NAME '.items.skill.isChipped')
                  selector='actor.item'
                  uuid=_id
                  key='system.chipLevel'
                  render='true'
                  value=this.system.chipLevel
                }}
              </div>
              {{!-- <button
                data-flavor="{{this.system.flavor}}"
                data-roll
                data-uuid="{{_id}}"
                class="skill__roll die--d-10"
                aria-label="Roll Check"
              >
              </button> --}}
              {{cp2020-button
                flavor="{{this.system.flavor}}"
                roll="true"
                uuid=_id
                class="skill__roll d-10"
                label="Roll Check"
              }}
              {{cp2020-button
                uuid=_id
                label='Remove Skill'
                selector='item-delete'
              }}
            </summary>
            <div>
              {{{system.description}}}
            </div>
            <div>
              {{cp2020-textarea
                label=(concat @root.constants.SYSTEM_NAME '.items.skill.notes')
                selector='actor.item'
                uuid=_id
                key='system.notes'
                render='true'
                value=this.system.notes
              }}
            </div>
          </details>
        </li>
      {{/each}}
    </ul>
  {{/cp2020-sectionBox}}
{{/if}}