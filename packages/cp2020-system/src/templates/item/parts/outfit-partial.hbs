{{systemLog ' OUTFIT PARTIAL | ' this}}
{{#if this.length}}
  {{#cp2020-sectionBox title='Outfit' class='item-list__wrapper'}}
    <ul class="item-list item-list--outfit">
      {{#each this}}
        <li class="item item--outfit" data-item-id="{{_id}}" data-item-name="{{name}}">
          <details class="item-roll item-name">
            <summary>
              <img class="outfit-item__img" src="{{img}}" title="{{name}}" />
              {{name}}
              {{cp2020-checkbox
                label=(concat @root.constants.SYSTEM_NAME '.items.equipped')
                name="item.system.equipped"
                value=system.equipped
              }}
            </summary>
            <p>
              {{{system.description}}}
            </p>
            <p>
              {{system.cost.euroDollars}}/{{system.cost.newYen}}
            </p>
            <p>
              {{system.weight}}
            </p>
            <button data-selector="item-delete" data-uuid="{{_id}}">drop</button>
          </details>
        </li>
      {{/each}}
    </ul>
  {{/cp2020-sectionBox}}
{{/if}}