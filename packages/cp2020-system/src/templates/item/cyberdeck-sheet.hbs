{{systemLog ' DECK SHEET | ' this}}
<form autocomplete="off" class="{{SYSTEM_NAME}}-cyberdeck-sheet {{cssClass}}">
  {{cp2020-outfitHeader
    name=item.name
    label="cp2020.items.cyberdeck.label"
  }}
  <nav class="sheet-tabs tabs" data-selector="primary-tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Details</a>
  </nav>
{{!-- Sheet Body --}}
<section data-selector="primary-tab-body">
  {{!-- Description Tab --}}
  <article class="fieldset tab" data-group="primary" data-tab="description">
    {{itemDetails this}}
  </article>
  {{!-- Details Tab --}}
  <article class="fieldset tab" data-group="primary" data-tab="details">
    <aside>
      <div class="row">
        {{cp2020-input
        label="cp2020.items.cyberdeck.speed.long"
        name="system.speed"
        type='number'
        value=item.system.speed
        }}
      </div>
      <div class="row">
        {{cp2020-input
        label="cp2020.items.cyberdeck.memory.long"
        name="system.memory"
        type='number'
        value=item.system.memory
        }}
      </div>
      <div class="row">
        {{cp2020-input
        label="cp2020.items.cyberdeck.dataWalls.long"
        name="system.dataWalls"
        type='number'
        value=item.system.dataWalls
        }}
      </div>
      <div class="row">
        {{cp2020-input
        label="cp2020.items.cyberdeck.codeGates.long"
        name="system.codeGates"
        type='number'
        value=item.system.codeGates
        }}
      </div>
      <div class="row">
        {{cp2020-input
        label="cp2020.items.cyberdeck.cpu.long"
        name="system.cpu"
        type='number'
        value=item.system.cpu
        }}
      </div>
    </aside>
    {{outfitSpecs this}}
  </article>
</form>