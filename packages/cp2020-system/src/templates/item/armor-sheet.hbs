{{systemLog ' ARMOR SHEET | ' this}}
<form autocomplete="off" class="{{SYSTEM_NAME}}-armor-sheet {{cssClass}}">
  {{cp2020-outfitHeader
    name=item.name
    label="cp2020.items.armor.label"
  }}

  <nav class="sheet-tabs tabs" data-selector="primary-tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="locations">Locations</a>
    <a class="item" data-tab="specs">Specs</a>
  </nav>
  {{!-- Sheet Body --}}
  <section data-selector="primary-tab-body">

  <article class="fieldset tab" data-group="primary" data-tab="description">
    {{itemDetails this}}
  </article>
  <article class="fieldset tab" data-group="primary" data-tab="locations">

    <div class="row location-list__row">
      <div class="col mannequin-col">
        <figure class="mannequin {{locationClasses}}">
          {{{graphic}}}
        </figure>
      </div>
      <div class="col location-list__col">
        {{cp2020-select
        label="cp2020.items.cyberware.location.long"
        name="system.locations"
        value=item.system.locations
        options=LOCATION_SELECT_OPTIONS
        multiple=true
        }}
      </div>
    </div>
  </article>
  <article class="fieldset tab" data-group="primary" data-tab="specs">
    <div class="col">
      {{cp2020-input
      label="cp2020.items.armor.sp.long"
      name="system.sp"
      type='number'
      value=item.system.sp
      }}
      {{cp2020-input
      label="cp2020.items.armor.ev.long"
      name="system.ev"
      type='number'
      value=item.system.ev
      }}
      {{outfitSpecs this}}
    </div>
  </article>
</form>