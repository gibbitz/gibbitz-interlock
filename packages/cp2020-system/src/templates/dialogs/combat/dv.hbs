{{systemLog ' DIFFICULTY VALUE DIALOG: |' this }}
<form data-selector="difficultyValue">
  <p>{{defaultDV}}</p>
  {{cp2020-select
    label=concat(@root.constants.SYSTEM_NAME '.dialogs.dv.overrideRange')
    name="overrideRange"
    selector="overrideRange"
    inverted=true
    options=overrideDvOptions
  }}
  {{cp2020-select
    label=concat(@root.constants.SYSTEM_NAME '.dialogs.dv.modifier')
    name="modifier"
    selector="modifier"
    multiple=true
    inverted=true
    options=@root.constants.TO_HIT_MODIFIERS_SELECT_OPTIONS
  }}
  {{cp2020-input
    label=concat(@root.constants.SYSTEM_NAME '.dialogs.dv.otherModifier')
    selector="otherModifier"
    name="otherModifier"
    type="number"
  }}
  {{cp2020-output
    label=concat(@root.constants.SYSTEM_NAME '.dialogs.dv.outputLabel')
    selector="dvOutput"
    name="dvOutput"
    value=dvData.dv
  }}
</form>